<h1>Recipe List</h1>
<table class='table table-striped table-condensed'>
	<tr>
		<th>Title</th>
		<th>Course</th>
		<th>Main Ingredient</th>
		<th colspan="2">Actions</th>
	</tr>
	<% @recipes.each do |r| %>
		<tr>
			<td><%= link_to r.title, recipe_path(r.id) %></td>
			<td><%= r.course %></td>
			<td><%= r.main_ingredient %></td>
			<td><%= link_to "Edit", edit_recipe_path(r.id) %></td>
			<td><%= link_to "Delete", recipe_path(r.id), :method => :delete, data: {:confirm => "Are you sure ?"} %></td>
		</tr>
	<% end %>

