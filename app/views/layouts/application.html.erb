<!DOCTYPE html>
<html>
<head>
  <title>Recipe Filer</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
	<div class="container">
      <!-- Static navbar -->
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Recipes', root_path, class: "navbar-brand" %>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'About', "about" %></li>
            <li><%= link_to 'Enter', new_recipe_path %></li>
            <li><%= link_to 'List', recipes_path %></li>
          </ul>

          	<form action="nav_search" class="navbar-form navbar-right" role="search">
		          <div class="form-group">
    	      		<input type="text" class="form-control" placeholder="Title Search..." name="query">
      		    </div>
          		<button type="Submit" class="btn btn-primary">Go</button>
          	</form>
        </div><!--/.nav-collapse -->
      </div><!--/.container-fluid -->
    </nav>
  </div> <!-- container -->

  <div class="container">
    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "alert alert-#{key}" %>
    <% end %>
  </div>

  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
